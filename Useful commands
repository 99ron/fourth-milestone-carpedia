# The --watch flag is optional.
sass --watch /static/scss/style.scss /static/css/style.css 

# Create a requirements file
pip3 freeze --local > requirements.txt

# Create a Procfile
echo web: python app.py > Procfile

# Get Dyno's running
$ heroku ps:scale web=1

# ignore files for git committing. Example of all .sql files.
echo '*.sql' >> .gitignore

# create a populated database from an sql schema
mysql -u $C9_USER -p < *sql name*

#start local mSQl
mysql-ctl start

#start mysql CLI
mysql-ctl cli

#Upgrading a package
sudo -H PACKAGE-NAME install --upgrade PACKAGE-NAME

# Install from requirements.txt
pip3 install -r requirements.txt

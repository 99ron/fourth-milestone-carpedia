# save results as an image for graph

def figure_to_base64(fig1):
    chart_io = BytesIO()
    fig1.savefig(chart_io, format='png', dpi=180,
                bbox_inches="tight", pad_inches=0)
    chart_str = chart_io.getvalue()
    return base64.b64encode(chart_str).decode('utf8')
    
